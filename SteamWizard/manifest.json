{
	"manifest_version": 2,

	"name": "SteamWizard",
	"description": "SteamWizard is a browser extension that helps loading additional information for CS:GO items on the steam community market.",
	"version": "0.8.5",
	
	"icons": {	"16": "images/icon_16.png",
				"48": "images/icon_48.png",
				"128": "images/icon_128.png" },

	"browser_action": {
		"default_icon": "images/icon_128.png",
		"default_popup": "html/popup.html"
	},
	"permissions": [
		"http://steamcommunity.com/*",
		"https://steamcommunity.com/*"
	],
	"background": {
		"scripts": ["javascript/jquery-3.0.0.min.js","javascript/background.js"],
                "presistant": false
	},
	"content_scripts": [
		{
		  "matches": ["http://steamcommunity.com/market/listings/730/*", "https://steamcommunity.com/market/listings/730/*"],
		  "run_at": "document_end",
		  "js": ["javascript/jquery-3.0.0.min.js", 
                         "javascript/utils/csgozone.js", 
                         "javascript/utils/metjm.js", 
                         "javascript/utils/steamwizard.js", 
                         "javascript/utils/ui.js", 
                         "javascript/steam/market.js"],
		  "css" : ["css/market.css"]
		},{
		  "matches": ["http://steamcommunity.com/profiles/*/inventory*", "http://steamcommunity.com/id/*/inventory*", "https://steamcommunity.com/profiles/*/inventory*", "https://steamcommunity.com/id/*/inventory*"],
		  "run_at": "document_end",
		  "js": ["javascript/jquery-3.0.0.min.js", 
                         "javascript/utils/csgozone.js", 
                         "javascript/utils/metjm.js", 
                         "javascript/utils/steamwizard.js", 
                         "javascript/utils/ui.js", 
                         "javascript/steam/inventory.js"],
		  "css" : ["css/market.css"]
		}
	  ],
	 "web_accessible_resources": [
		"javascript/jquery-3.0.0.min.js", 
		"images/logo_csgozone.png", 
		"images/logo_metjm.png",
		"css/popup.css",
		"javascript/popoup.js"
	]
}